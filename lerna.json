{
  "version": "0.2.6",
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "npmClientArgs": ["--no-lockfile"],
  "useWorkspaces": true,
  "command": {
    "version": {
      "createRelease": "github",
      "conventionalCommits": true
    },
    "publish": {
      "registry": "http://localhost:4873",
      "access": "public",
      "allowBranch": ["master", "lerna-yarn-workspaces"],
      "ignoreChanges": ["*.md", "*.txt", "*.test.js"],
      "conventionalCommits": true
    }
  }
}
