{
  "version": "0.2.0",
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "npmClientArgs": [
    "--no-lockfile"
  ],
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "*.txt",
        "*.test.js"
      ],
      "conventionalCommits": true,
      "githubRelease": true,
      "registry": "http://localhost:4873",
      "access": "public",
      "npmClient": "yarn",
      "allowBranch": [
        "master",
        "lerna-yarn-workspaces"
      ]
    }
  }
}
