{
  "version": "1.0.2",
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "npmClientArgs": [
    "--no-lockfile"
  ],
  "useWorkspaces": true,
  "command": {
    "version": {
      "createRelease": "github",
      "conventionalCommits": true
    },
    "publish": {
      "registry": "http://localhost:4873",
      "access": "public",
      "npmClient": "yarn",
      "allowBranch": [
        "master",
        "lerna-yarn-workspaces"
      ],
      "ignoreChanges": [
        "*.md",
        "*.txt",
        "__tests__",
        "*.test.js"
      ],
      "conventionalCommits": true,
      "githubRelease": true
    }
  }
}
