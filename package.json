{
  "private": true,
  "name": "monorepo-playground",
  "description": "A playground to test different monorepo approaches",
  "engines": {
    "node": ">=10.4.0",
    "yarn": ">=1.0.0",
    "npm": ">= 5.2.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "commit": "git-cz",
    "test": "jest",
    "lint": "eslint .",
    "build": "lerna exec --parallel 'babel src --root-mode upward --out-dir dist --source-maps --ignore **/*.spec.js,**/*.test.js --delete-dir-on-start --no-comments --compact --minified'",
    "prerelease": "yarn lint && yarn test && yarn build",
    "release": "lerna publish --yes",
    "version:beta":"lerna version --yes --conventional-commits --conventional-prerelease=* --preid beta",
    "release:beta": "lerna publish --yes --pre-dist-tag beta --canary major"
  },
  "jest": {
    "roots": [
      "<rootDir>packages"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "^22.7.1",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^24.8.0",
    "lerna": "^3.15.0",
    "prettier": "^1.18.2"
  }
}
